-- Create Feature Function (New Design)
local function createFeature(data)
    local featureFrame = Instance.new("Frame")
    featureFrame.Size = UDim2.new(1, -10, 0, 70)
    featureFrame.Position = data.position
    featureFrame.BackgroundColor3 = data.bgColor or Color3.new(0.95, 0.95, 0.98)
    featureFrame.BorderSizePixel = 0
    featureFrame.Parent = otherContent

    local featureCorner = Instance.new("UICorner")
    featureCorner.CornerRadius = UDim.new(0, 12)
    featureCorner.Parent = featureFrame

    -- Icon
    local icon = Instance.new("TextLabel")
    icon.Size = UDim2.new(0, 40, 0, 40)
    icon.Position = UDim2.new(0, 15, 0, 15)
    icon.BackgroundTransparency = 1
    icon.Text = data.icon
    icon.TextColor3 = data.iconColor
    icon.TextSize = 24
    icon.Font = Enum.Font.Gotham
    icon.Parent = featureFrame

    -- Title
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, -140, 0, 22)
    title.Position = UDim2.new(0, 60, 0, 10)
    title.BackgroundTransparency = 1
    title.Text = data.title
    title.TextColor3 = data.titleColor or Color3.new(0.1, 0.1, 0.1)
    title.TextSize = 14
    title.Font = Enum.Font.GothamBold
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Parent = featureFrame

    -- Description
    local desc = Instance.new("TextLabel")
    desc.Size = UDim2.new(1, -140, 0, 18)
    desc.Position = UDim2.new(0, 60, 0, 32)
    desc.BackgroundTransparency = 1
    desc.Text = data.description
    desc.TextColor3 = Color3.new(0.5, 0.5, 0.5)
    desc.TextSize = 11
    desc.Font = Enum.Font.Gotham
    desc.TextXAlignment = Enum.TextXAlignment.Left
    desc.Parent = featureFrame

    -- Button
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, data.buttonWidth or 80, 0, 30)
    button.Position = UDim2.new(1, -(data.buttonWidth or 80) - 15, 0, 20)
    button.BackgroundColor3 = data.buttonColor
    button.Text = data.buttonText
    button.TextColor3 = Color3.new(1, 1, 1)
    button.TextSize = 10
    button.Font = Enum.Font.Gotham
    button.Parent = featureFrame

    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 8)
    buttonCorner.Parent = button

    -- Button Events
    if data.callback then
        button.MouseButton1Click:Connect(data.callback)
    end

    -- Hover Effects
    if data.hoverColor then
        button.MouseEnter:Connect(function()
            button.BackgroundColor3 = data.hoverColor
        end)
        
        button.MouseLeave:Connect(function()
            button.BackgroundColor3 = data.buttonColor
        end)
    end

    return featureFrame, button
end

