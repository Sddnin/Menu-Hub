-- Functions
local function getText(key)
    return languages[currentLanguage][key] or languages.en[key] or key
end

local function updateLanguage()
    -- Update tab texts
    tabButtons["Script"].button.Text = getText("tabScript")
    tabButtons["Other"].button.Text = getText("tabOther")
    
    -- Update search placeholders
    searchBox.PlaceholderText = getText("searchScripts")
    playerSearchBox.PlaceholderText = getText("searchPlayers")
    playerTitle.Text = getText("players")
    
    -- Update other header
    otherHeader.Text = getText("otherFeatures")
    
    -- Update features (will be done when creating them)
end

local function showLoadingAnimation(scriptName)
    loadingText.Text = "Loading " .. scriptName .. "..."
    loadingFrame.Visible = true
    
    local spinConnection
    spinConnection = RunService.Heartbeat:Connect(function()
        if not loadingFrame.Visible then
            spinConnection:Disconnect()
            return
        end
        loadingSpinner.Rotation = loadingSpinner.Rotation + 5
    end)
    
    wait(2)
    loadingFrame.Visible = false
    if spinConnection then
        spinConnection:Disconnect()
    end
end

local function createScriptButton(scriptData, position)
    local scriptFrame = Instance.new("Frame")
    scriptFrame.Name = scriptData.name:gsub("%s", "")
    scriptFrame.Size = UDim2.new(0, 180, 0, 60)
    scriptFrame.Position = position
    scriptFrame.BackgroundColor3 = Color3.new(0.95, 0.95, 0.98)
    scriptFrame.BorderSizePixel = 0
    scriptFrame.Parent = scriptsContainer
    
    local frameCorner = Instance.new("UICorner")
    frameCorner.CornerRadius = UDim.new(0, 8)
    frameCorner.Parent = scriptFrame
    
    local nameLabel = Instance.new("TextLabel")
    nameLabel.Size = UDim2.new(1, -10, 0, 25)
    nameLabel.Position = UDim2.new(0, 5, 0, 5)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Text = scriptData.name
    nameLabel.TextColor3 = Color3.new(0.2, 0.2, 0.2)
    nameLabel.TextSize = 12
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.TextXAlignment = Enum.TextXAlignment.Left
    nameLabel.Parent = scriptFrame
    
    local executeBtn = Instance.new("TextButton")
    executeBtn.Size = UDim2.new(0, 120, 0, 25)
    executeBtn.Position = UDim2.new(0, 30, 0, 30)
    executeBtn.BackgroundColor3 = Color3.new(0.4, 0.8, 0.4)
    executeBtn.Text = getText("execute")
    executeBtn.TextColor3 = Color3.new(1, 1, 1)
    executeBtn.TextSize = 11
    executeBtn.Font = Enum.Font.Gotham
    executeBtn.Parent = scriptFrame
    
    local executeCorner = Instance.new("UICorner")
    executeCorner.CornerRadius = UDim.new(0, 5)
    executeCorner.Parent = executeBtn
    
    executeBtn.MouseButton1Click:Connect(function()
        spawn(function()
            showLoadingAnimation(scriptData.name)
        end)
        
        pcall(function()
            loadstring(scriptData.code)()
        end)
    end)
    
    executeBtn.MouseEnter:Connect(function()
        executeBtn.BackgroundColor3 = Color3.new(0.3, 0.7, 0.3)
    end)
    
    executeBtn.MouseLeave:Connect(function()
        executeBtn.BackgroundColor3 = Color3.new(0.4, 0.8, 0.4)
    end)
    
    return scriptFrame
end

local function updateScriptList(searchTerm)
    for _, child in pairs(scriptsContainer:GetChildren()) do
        if child:IsA("Frame") then
            child:Destroy()
        end
    end
    
    searchTerm = searchTerm:lower()
    local row, col = 0, 0
    local totalHeight = 0
    
    for _, scriptData in ipairs(scriptsData) do
        if searchTerm == "" or scriptData.name:lower():find(searchTerm) then
            local position = UDim2.new(0, col * 190, 0, row * 70)
            createScriptButton(scriptData, position)
            
            col = col + 1
            if col >= 2 then
                col = 0
                row = row + 1
            end
            totalHeight = (row + 1) * 70
        end
    end
    
    scriptsContainer.Size = UDim2.new(1, 0, 0, math.max(totalHeight, 400))
    scriptContent.CanvasSize = UDim2.new(0, 0, 0, totalHeight + 50)
end

local function updatePlayerList(searchTerm)
    searchTerm = searchTerm or ""
    searchTerm = searchTerm:lower()
    
    for _, child in pairs(playerList:GetChildren()) do
        if child:IsA("Frame") then
            child:Destroy()
        end
    end
    
    local visiblePlayers = 0
    
    for _, targetPlayer in pairs(Players:GetPlayers()) do
        if targetPlayer ~= player then
            if searchTerm == "" or targetPlayer.Name:lower():find(searchTerm) then
                local playerContainer = Instance.new("Frame")
                playerContainer.Size = UDim2.new(1, 0, 0, 35)
                playerContainer.BackgroundColor3 = Color3.new(0.98, 0.98, 0.98)
                playerContainer.Parent = playerList
                
                local containerCorner = Instance.new("UICorner")
                containerCorner.CornerRadius = UDim.new(0, 3)
                containerCorner.Parent = playerContainer
                
                local playerName = Instance.new("TextLabel")
                playerName.Size = UDim2.new(1, 0, 0, 15)
                playerName.Position = UDim2.new(0, 5, 0, 2)
                playerName.BackgroundTransparency = 1
                playerName.Text = targetPlayer.Name
                playerName.TextSize = 9
                playerName.Font = Enum.Font.Gotham
                playerName.TextColor3 = Color3.new(0.2, 0.2, 0.2)
                playerName.TextXAlignment = Enum.TextXAlignment.Left
                playerName.Parent = playerContainer
                
                local tpBtn = Instance.new("TextButton")
                tpBtn.Size = UDim2.new(0, 35, 0, 15)
                tpBtn.Position = UDim2.new(0, 5, 0, 17)
                tpBtn.BackgroundColor3 = Color3.new(0.7, 0.9, 1)
                tpBtn.Text = "TP"
                tpBtn.TextSize = 8
                tpBtn.Font = Enum.Font.Gotham
                tpBtn.TextColor3 = Color3.new(0, 0.3, 0.6)
                tpBtn.Parent = playerContainer
                
                local viewBtn = Instance.new("TextButton")
                viewBtn.Size = UDim2.new(0, 35, 0, 15)
                viewBtn.Position = UDim2.new(0, 45, 0, 17)
                viewBtn.BackgroundColor3 = Color3.new(1, 0.9, 0.7)
                viewBtn.Text = "View"
                viewBtn.TextSize = 8
                viewBtn.Font = Enum.Font.Gotham
                viewBtn.TextColor3 = Color3.new(0.6, 0.3, 0)
                viewBtn.Parent = playerContainer
                
                local tpCorner = Instance.new("UICorner")
                tpCorner.CornerRadius = UDim.new(0, 2)
                tpCorner.Parent = tpBtn
                
                local viewCorner = Instance.new("UICorner")
                viewCorner.CornerRadius = UDim.new(0, 2)
                viewCorner.Parent = viewBtn
                
                tpBtn.MouseButton1Click:Connect(function()
                    if targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
                        character.HumanoidRootPart.CFrame = targetPlayer.Character.HumanoidRootPart.CFrame
                    end
                end)
                
                viewBtn.MouseButton1Click:Connect(function()
                    if targetPlayer.Character and targetPlayer.Character:FindFirstChild("Humanoid") then
                        workspace.CurrentCamera.CameraSubject = targetPlayer.Character.Humanoid
                    end
                end)
                
                visiblePlayers = visiblePlayers + 1
            end
        end
    end
    
    playerList.CanvasSize = UDim2.new(0, 0, 0, visiblePlayers * 37)
end

local function switchTab(tabName)
    currentTab = tabName
    
    for name, tabData in pairs(tabButtons) do
        if name == tabName then
            tabData.button.BackgroundColor3 = Color3.new(0.2, 0.4, 0.8)
            tabData.button.TextColor3 = Color3.new(1, 1, 1)
        else
            tabData.button.BackgroundColor3 = Color3.new(1, 1, 1)
            tabData.button.TextColor3 = Color3.new(0.5, 0.5, 0.5)
        end
    end
    
    scriptContent.Visible = tabName == "Script"
    otherContent.Visible = tabName == "Other"
end

local function toggleAntiAFK()
    antiAFK = not antiAFK
    
    if antiAFK then
        afkConnection = game:GetService("Players").LocalPlayer.Idled:Connect(function()
            game:GetService("VirtualUser"):CaptureController()
            game:GetService("VirtualUser"):ClickButton2(Vector2.new())
        end)
        
        spawn(function()
            while antiAFK do
                wait(60)
                if antiAFK then
                    local camera = workspace.CurrentCamera
                    if camera then
                        camera.CFrame = camera.CFrame * CFrame.Angles(0, math.rad(0.1), 0)
                        wait(0.1)
                        camera.CFrame = camera.CFrame * CFrame.Angles(0, math.rad(-0.1), 0)
                    end
                end
            end
        end)
    else
        if afkConnection then
            afkConnection:Disconnect()
            afkConnection = nil
        end
    end
    
    return antiAFK
end

-- Create Other Tab Features
local antiAFKFrame, antiAFKButton

local function createOtherFeatures()
    -- Music Player
    createFeature({
        position = UDim2.new(0, 5, 0, 40),
        icon = "🎵",
        iconColor = Color3.new(0.6, 0.2, 0.8),
        title = getText("musicPlayer"),
        description = getText("musicDesc"),
        buttonText = getText("openMusic"),
        buttonColor = Color3.new(0.6, 0.4, 0.8),
        hoverColor = Color3.new(0.5, 0.3, 0.7),
        bgColor = Color3.new(0.95, 0.9, 1),
        callback = function()
            spawn(function()
                showLoadingAnimation("Music Player")
            end)
            pcall(function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Sddnin/Menu-Hub/refs/heads/main/Music"))()
            end)
        end
    })

    -- Graphics Settings
    createFeature({
        position = UDim2.new(0, 5, 0, 120),
        icon = "🎮",
        iconColor = Color3.new(0.2, 0.4, 0.8),
        title = getText("graphicsSettings"),
        description = getText("graphicsDesc"),
        buttonText = getText("openGraphics"),
        buttonColor = Color3.new(0.4, 0.6, 1),
        hoverColor = Color3.new(0.3, 0.5, 0.9),
        bgColor = Color3.new(0.9, 0.95, 1),
        callback = function()
            spawn(function()
                showLoadingAnimation("Graphics Settings")
            end)
            pcall(function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Sddnin/Menu-Hub/refs/heads/main/Graphics"))()
            end)
        end
    })

    -- Paint-Alpha
    createFeature({
        position = UDim2.new(0, 5, 0, 200),
        icon = "🎨",
        iconColor = Color3.new(0.8, 0.2, 0.5),
        title = getText("paintAlpha"),
        description = getText("paintDesc"),
        buttonText = getText("openPaint"),
        buttonColor = Color3.new(0.9, 0.3, 0.6),
        hoverColor = Color3.new(0.8, 0.2, 0.5),
        bgColor = Color3.new(1, 0.9, 0.95),
        callback = function()
            spawn(function()
                showLoadingAnimation("Paint-Alpha")
            end)
            pcall(function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Sddnin/Menu-Hub/refs/heads/main/Paint"))()
            end)
        end
    })

    -- Client Settings
    createFeature({
        position = UDim2.new(0, 5, 0, 280),
        icon = "⚙️",
        iconColor = Color3.new(0.2, 0.7, 0.2),
        title = getText("clientSettings"),
        description = getText("clientDesc"),
        buttonText = getText("openClient"),
        buttonColor = Color3.new(0.3, 0.8, 0.3),
        hoverColor = Color3.new(0.2, 0.7, 0.2),
        bgColor = Color3.new(0.9, 1, 0.9),
        callback = function()
            spawn(function()
                showLoadingAnimation("Client Settings")
            end)
            pcall(function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Sddnin/Menu-Hub/refs/heads/main/Cilent"))()
            end)
        end
    })

    -- Anti-AFK (with toggle animation)
    antiAFKFrame, antiAFKButton = createFeature({
        position = UDim2.new(0, 5, 0, 360),
        icon = "⚡",
        iconColor = Color3.new(0.9, 0.6, 0.1),
        title = getText("antiAFK"),
        description = getText("antiAFKDesc"),
        buttonText = antiAFK and getText("antiAFKOn") or getText("antiAFKOff"),
        buttonColor = antiAFK and Color3.new(0.4, 0.8, 0.4) or Color3.new(0.8, 0.4, 0.4),
        hoverColor = antiAFK and Color3.new(0.3, 0.7, 0.3) or Color3.new(0.7, 0.3, 0.3),
        bgColor = Color3.new(1, 0.95, 0.8),
        buttonWidth = 100,
        callback = function()
            local newState = toggleAntiAFK()
            
            -- Animate button change
            local tween = TweenService:Create(antiAFKButton, 
                TweenInfo.new(0.3, Enum.EasingStyle.Bounce, Enum.EasingDirection.Out),
                {
                    BackgroundColor3 = newState and Color3.new(0.4, 0.8, 0.4) or Color3.new(0.8, 0.4, 0.4)
                }
            )
            tween:Play()
            
            antiAFKButton.Text = newState and getText("antiAFKOn") or getText("antiAFKOff")
        end
    })

    -- Command Console
    createFeature({
        position = UDim2.new(0, 5, 0, 440),
        icon = "💻",
        iconColor = Color3.new(0.1, 0.1, 0.1),
        title = getText("commandConsole"),
        description = getText("commandDesc"),
        buttonText = getText("openCommand"),
        buttonColor = Color3.new(0.2, 0.2, 0.2),
        hoverColor = Color3.new(0.1, 0.1, 0.1),
        bgColor = Color3.new(0.95, 0.95, 0.95),
        callback = function()
            spawn(function()
                showLoadingAnimation("Command Console")
            end)
            pcall(function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Sddnin/Menu-Hub/refs/heads/main/Command"))()
            end)
        end
    })

    -- Language Settings
    createFeature({
        position = UDim2.new(0, 5, 0, 520),
        icon = "🌐",
        iconColor = Color3.new(0.3, 0.5, 0.9),
        title = getText("language"),
        description = getText("languageDesc"),
        buttonText = currentLanguage:upper(),
        buttonColor = Color3.new(0.4, 0.6, 0.9),
        hoverColor = Color3.new(0.3, 0.5, 0.8),
        bgColor = Color3.new(0.9, 0.95, 1),
        buttonWidth = 60,
        callback = function()
            local langOrder = {"en", "vi", "ja", "zh"}
            local currentIndex = 1
            for i, lang in ipairs(langOrder) do
                if lang == currentLanguage then
                    currentIndex = i
                    break
                end
            end
            
            currentIndex = currentIndex % #langOrder + 1
            currentLanguage = langOrder[currentIndex]
            
            updateLanguage()
            
            -- Refresh Other tab
            for _, child in pairs(otherContent:GetChildren()) do
                if child:IsA("Frame") and child ~= otherHeader then
                    child:Destroy()
                end
            end
            createOtherFeatures()
        end
    })
end

-- Initialize
updateScriptList("")
createOtherFeatures()
updateLanguage()

-- Tab Events
for tabName, tabData in pairs(tabButtons) do
    tabData.button.MouseButton1Click:Connect(function()
        switchTab(tabName)
        if tabName == "Script" then
            updateScriptList("")
        end
    end)
end

-- Search Events
searchBox.Changed:Connect(function(property)
    if property == "Text" then
        updateScriptList(searchBox.Text)
    end
end)

playerSearchBox.Changed:Connect(function(property)
    if property == "Text" then
        updatePlayerList(playerSearchBox.Text)
    end
end)

-- Close/Toggle Events
closeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    toggleButton.Visible = true
    playerFrame.Visible = false
end)

closeBtn.MouseEnter:Connect(function()
    closeBtn.BackgroundColor3 = Color3.new(1, 0.3, 0.3)
end)

closeBtn.MouseLeave:Connect(function()
    closeBtn.BackgroundColor3 = Color3.new(0.9, 0.4, 0.4)
end)

toggleButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = true
    toggleButton.Visible = false
end)

-- Keyboard Shortcut
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.RightShift then
        if mainFrame.Visible then
            mainFrame.Visible = false
            toggleButton.Visible = true
            playerFrame.Visible = false
        else
            mainFrame.Visible = true
            toggleButton.Visible = false
        end
    end
end)

-- Character Respawn
player.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    humanoid = character:WaitForChild("Humanoid")
    wait(1)
end)

print("Mila UI v2.0 đã được tải thành công! 💖")
print("Nhấn Right Shift để bật/tắt UI")
print("Các ngôn ngữ: English, Tiếng Việt, 日本語, 中文")