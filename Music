    if volume then
        updateVolume(volume)
    else
        volumeSlider.Text = tostring(userData.volume)
        showNotification("Volume ph·∫£i l√† s·ªë t·ª´ 0-10!", colors.danger, "‚ö†Ô∏è")
    end
end)

